<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.WaveView" parent="@android:style/Widget">
        <item name="waveStrokeWidth">1dp</item>
        <item name="waveColor">@color/cardview_dark_background</item>
        <item name="waveGap">16dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#e5e5e5</item>
    </style>

</resources>
